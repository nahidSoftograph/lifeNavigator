<form action="/assessRisk/updateEditInstance/{{assessRisk._id}}" method="post">

    <div class="row">
        <div class="input-field col s10">
            <input name="headerText" value="{{assessRisk.headerText}}" id="headerTextAssessRisk" type="text" class="validate">
            <label class="active" for="headerTextAssessRisk">Enter Header Text</label>
        </div>
        <div class="col s2" style="margin-top: 15px;">
            <button class="btn waves-effect waves-light setToDefaultButtonHeaderText">Set to Default
            </button>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s10">
            <input name="paragraphText" value="{{assessRisk.paragraphText}}" id="paragraphTextAssessRisk" type="text" class="validate">
            <label class="active" for="paragraphTextAssessRisk">Enter Paragraph Text</label>
        </div>
        <div class="col s2" style="margin-top: 15px;">
            <button class="btn waves-effect waves-light setToDefaultButtonParagraphText">Set to Default
            </button>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s10">
            <input name="subHeaderText" value="{{assessRisk.subHeaderText}}" id="subHeaderTextAssessRisk" type="text" class="validate">
            <label class="active" for="subHeaderTextAssessRisk">Enter Sub Header Text</label>
        </div>
        <div class="col s2" style="margin-top: 15px;">
            <button class="btn waves-effect waves-light setToDefaultButtonSubHeaderText">Set to Default
            </button>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s10">
            <input name="buttonText" value="{{assessRisk.buttonText}}" id="buttonTextAssessRisk" type="text" class="validate">
            <label class="active" for="buttonTextAssessRisk">Enter Button Text</label>
        </div>
        <div class="col s2" style="margin-top: 15px;">
            <button class="btn waves-effect waves-light setToDefaultButtonButtonText">Set to Default
            </button>
        </div>
    </div>

    <input type="hidden" name="instanceId" value="{{assessRisk.instanceId}}">
    <input type="hidden" name="buttonLink" value="{{assessRisk.buttonLink}}">
    <input type="hidden" name="callBackURL" value="/assessRisk/display/{{assessRisk._id}}">

    <div class="row">
        <div class="col s12 m6 l6" ><p><a class="waves-effect waves-light btn" style="background-color: green;">Preview</a>
        </p></div>
        <div type="submit" class="col s12 m6 l6"><p><input value="Update" type="submit" class="waves-effect waves-light btn" style="background-color: #4a148c;">
        </p></div>
    </div>

</form>

<script>
    $(document).ready(() => {

        $('.setToDefaultButtonHeaderText').on('click', () => {
            event.preventDefault();
            let url = location.origin + '/defaultInstance/getData/';
            $.get(url).done(function(data){
                $('#headerTextAssessRisk').val(data.assessRisk.headerText);
            }).fail(function(data){
                console.log(data);
            });
        });

        $('.setToDefaultButtonParagraphText').on('click', () => {
            event.preventDefault();
            let url = location.origin + '/defaultInstance/getData/';
            $.get(url).done(function(data){
                $('#paragraphTextAssessRisk').val(data.assessRisk.paragraphText);
            }).fail(function(data){
                console.log(data);
            });
        });

        $('.setToDefaultButtonSubHeaderText').on('click', () => {
            event.preventDefault();
            let url = location.origin + '/defaultInstance/getData/';
            $.get(url).done(function(data){
                $('#subHeaderTextAssessRisk').val(data.assessRisk.subHeaderText);
            }).fail(function(data){
                console.log(data);
            });
        });

        $('.setToDefaultButtonButtonText').on('click', () => {
            event.preventDefault();
            let url = location.origin + '/defaultInstance/getData/';
            $.get(url).done(function(data){
                $('#buttonTextAssessRisk').val(data.assessRisk.buttonText);
            }).fail(function(data){
                console.log(data);
            });
        });

    });
</script>