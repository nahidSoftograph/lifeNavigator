
<div class="row">
    <div class="col-12">
        <form action="/assessRisk/update/{{assessRisk._id}}" method="post">

            <input type="hidden" name="instanceId" value="{{instanceId}}">
            <input type="hidden" name="callBackURL" value="/defaultSite/assessRisk">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Enter Header</label>
                <div class="col-sm-10">
                    <input type="text" name="headerText" class="form-control" placeholder="Enter Header" value="{{assessRisk.headerText}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Enter Paragraph</label>
                <div class="col-sm-10">
                    <input type="text" name="paragraphText" class="form-control" placeholder="Enter Paragraph" value="{{assessRisk.paragraphText}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Enter Sub Header</label>
                <div class="col-sm-10">
                    <input type="text" name="subHeaderText" class="form-control" placeholder="Enter Sub Header" value="{{assessRisk.subHeaderText}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Button Text</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="buttonText" placeholder="Enter Button Text" value="{{assessRisk.buttonText}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Button Link</label>
                <div class="col-sm-10">
                    <input type="text" name="buttonLink" class="form-control" placeholder="Enter Button Link" value="{{assessRisk.buttonLink}}">
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-primary btn-block" type="submit">Update</button>
                </div>
            </div>

            <br>

            <div class="row">
                <div class="col-12">
                    <button class="btn btn-success btn-block">Preview</button>
                </div>
            </div>
        </form>
    </div>
</div>

<br>
<br>
<hr>

<div class="row">
    <div class="col-12">
        <p>
            <button class="btn btn-primary btn-block" type="button" data-toggle="collapse" data-target="#industrySection" aria-expanded="false" aria-controls="collapseExample">
                Industry Section
            </button>
        </p>
    </div>
</div>
<div class="collapse" id="industrySection">
    <div class="row">
        <div class="col-12">
            <div class="text-center font-weight-bold d-block p-2 bg-secondary text-white">Industries</div>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Text</th>
                    <th scope="col">Operation</th>
                    <th scope="col">Visibility</th>
                </tr>
                </thead>
                <tbody>
                {{#each industries}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.text}}</td>
                        <td><button class="btn btn-primary" data-toggle="modal" data-target="#updateIndustry{{this._id}}">Update</button></td>
                        <div class="modal fade" id="updateIndustry{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="leModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Update Industry</h5>
                                        <form action="/industry/delete/{{this._id}}" method="post">
                                            <input type="hidden" name="callBackURL" value="/defaultSite/assessRisk">
                                            <button class="btn btn-danger" type="submit">Delete {{this.name}}</button>
                                        </form>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/industry/update/{{this._id}}" method="post">
                                            <input type="hidden" name="callBackURL" value="/defaultSite/assessRisk">
                                            <input type="hidden" name="instanceId" value="{{instanceId}}">
                                            <input type="hidden" name="name" value="{{this.name}}">
                                            <div class="form-group">
                                                <label>{{this.name}} Text</label>
                                                <input type="text" class="form-control" name="text" placeholder="Enter Text" value="{{this.text}}">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <td>
                            <form action="/industry/alterVisibility/{{this._id}}" method="post">
                                <input type="hidden" name="callBackURL" value="/defaultSite/assessRisk">
                                {{#if this.isVisible}}
                                    <button class="btn btn-danger" type="submit">Make Invisible</button>
                                {{else}}
                                    <button class="btn btn-success" type="submit">Make Visibile</button>
                                {{/if}}
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

