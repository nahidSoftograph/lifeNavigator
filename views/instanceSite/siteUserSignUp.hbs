<div class="col s12 m8 l9">

    <div class="card white">
        <div class="card-content black-text">
            <span class="card-title">Sign Up </span>
            <form action="/siteUserSignUp/update/{{siteUserSignUp._id}}" method="post">

                <div class="row">
                    <div class="input-field col s12">
                        <input name="headerText" value="{{siteUserSignUp.headerText}}" id="headerText" type="text" class="validate">
                        <label class="active" for="headerText">Enter Header Text</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="beforeAge" value="{{siteUserSignUp.beforeAge}}" id="beforeAge" type="text" class="validate">
                        <label class="active" for="beforeAge">Enter Before Age</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="afterAge" value="{{siteUserSignUp.afterAge}}" id="afterAge" type="text" class="validate">
                        <label class="active" for="afterAge">Enter After Age</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="beforeGender" value="{{siteUserSignUp.beforeGender}}" id="beforeGender" type="text" class="validate">
                        <label class="active" for="beforeGender">Enter Before Gender</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="beforeZip" value="{{siteUserSignUp.beforeZip}}" id="beforeZip" type="text" class="validate">
                        <label class="active" for="beforeZip">Enter Before Zip</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="buttonText" value="{{siteUserSignUp.buttonText}}" id="buttonText" type="text" class="validate">
                        <label class="active" for="buttonText">Enter Button Text</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s2"><u>Forms Input Section</u></div>
                    <div class="col s1"><u>Order</u></div>
                </div>
                <div class="row">
                    <div class="col s2" style="margin-top: 30px;">
                        Age Input
                    </div>
                    <div class="input-field col s1">
                        <select id="yearRow" name="yearRow">
                            <option {{#equal siteUserSignUp.yearRow "0"}} selected {{/equal}} value="0">1</option>
                            <option {{#equal siteUserSignUp.yearRow "1"}} selected {{/equal}} value="1">2</option>
                            <option {{#equal siteUserSignUp.yearRow "2"}} selected {{/equal}} value="2">3</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col s2" style="margin-top: 30px;">
                        Gender Input
                    </div>
                    <div class="input-field col s1">
                        <select id="genderRow" name="genderRow">
                            <option {{#equal siteUserSignUp.genderRow "0"}} selected {{/equal}} value="0">1</option>
                            <option {{#equal siteUserSignUp.genderRow "1"}} selected {{/equal}} value="1">2</option>
                            <option {{#equal siteUserSignUp.genderRow "2"}} selected {{/equal}} value="2">3</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col s2" style="margin-top: 30px;">
                        Zip Input
                    </div>
                    <div class="input-field col s1">
                        <select id="zipRow" name="zipRow">
                            <option {{#equal siteUserSignUp.zipRow "0"}} selected {{/equal}} value="0">1</option>
                            <option {{#equal siteUserSignUp.zipRow "1"}} selected {{/equal}} value="1">2</option>
                            <option {{#equal siteUserSignUp.zipRow "2"}} selected {{/equal}} value="2">3</option>
                        </select>
                    </div>
                </div>

                <input type="hidden" value="{{siteUserSignUp.instanceId}}">

                <div class="row">
                    <div class="col s12 m6 l6" ><p><a class="waves-effect waves-light btn" style="background-color: green;">Preview</a>
                    </p></div>
                    <div type="submit" class="col s12 m6 l6"><p><input value="Update" type="submit" class="waves-effect waves-light btn" style="background-color: #4a148c;">
                    </p></div>
                </div>

            </form>
        </div>
    </div>

</div>

<script>
    $(document).ready(() => {

        $('#yearRow').on('change', function() {
            let yearRow = $('#yearRow').find(":selected").val();
            let genderRow = $('#genderRow').find(":selected").val();
            let zipRow = $('#zipRow').find(":selected").val();
            if (yearRow == genderRow || yearRow == zipRow || genderRow == zipRow) {
                Materialize.toast('Invalid Form Section Order', 3000);
            }
        });

        $('#genderRow').on('change', function() {
            let yearRow = $('#yearRow').find(":selected").val();
            let genderRow = $('#genderRow').find(":selected").val();
            let zipRow = $('#zipRow').find(":selected").val();
            if (yearRow == genderRow || yearRow == zipRow || genderRow == zipRow) {
                Materialize.toast('Invalid Form Section Order', 3000);
            }
        });

        $('#zipRow').on('change', function() {
            let yearRow = $('#yearRow').find(":selected").val();
            let genderRow = $('#genderRow').find(":selected").val();
            let zipRow = $('#zipRow').find(":selected").val();
            if (yearRow == genderRow || yearRow == zipRow || genderRow == zipRow) {
                Materialize.toast('Invalid Form Section Order', 3000);
            }
        });
    });
</script>