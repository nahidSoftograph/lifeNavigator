
<div class="row">
    <div class="col-12">
        <form action="/siteUserSignUp/update/{{siteUserSignUp._id}}" method="post">
            <input type="hidden" name="instanceId" value="{{siteUserSignUp.instanceId}}">

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Header Text</label>
                <div class="col-sm-10">
                    <input type="text" name="headerText" class="form-control" placeholder="Enter Header Text" value="{{siteUserSignUp.headerText}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Before Age Text</label>
                <div class="col-sm-10">
                    <input type="text" name="beforeAge" class="form-control" placeholder="Enter Before Age Text" value="{{siteUserSignUp.beforeAge}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">After Age Text</label>
                <div class="col-sm-10">
                    <input type="text" name="afterAge" class="form-control" placeholder="Enter After Age Text" value="{{siteUserSignUp.afterAge}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Before Gender Text</label>
                <div class="col-sm-10">
                    <input type="text" name="beforeGender" class="form-control" placeholder="Enter Before Gender" value="{{siteUserSignUp.beforeGender}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Before Zip Text</label>
                <div class="col-sm-10">
                    <input type="text" name="beforeZip" class="form-control" placeholder="Enter Before Zip" value="{{siteUserSignUp.beforeZip}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Button Text</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="buttonText" placeholder="Enter Button Text" value="{{siteUserSignUp.buttonText}}">
                </div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-2">
                    <button class="btn btn-block btn-sm bg-secondary text-white">Preview</button>
                </div>
                <div class="col-2"></div>
                <div class="col-2">
                    <button class="btn btn-block btn-sm bg-info text-white" type="submit">Update</button>
                </div>
                <div class="col-3"></div>
            </div>
        </form>
    </div>
</div>