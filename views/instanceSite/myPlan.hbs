<div class="row">
    <div class="col-12">
        <form action="/myPlan/update/{{myPlan._id}}" method="post">
            <input type="hidden" name="instanceId" value="{{myPlan.instanceId}}">

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Header Text</label>
                <div class="col-sm-10">
                    <input type="text" name="headerText" class="form-control" placeholder="Enter Header Text" value="{{myPlan.headerText}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Sub Header Text</label>
                <div class="col-sm-10">
                    <input type="text" name="subHeaderText" class="form-control" placeholder="Enter Sub Header Text" value="{{myPlan.subHeaderText}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Complement</label>
                <div class="col-sm-10">
                    <input type="text" name="complement" class="form-control" placeholder="Enter Complement" value="{{myPlan.complement}}">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-weight-bold">Final Instruction</label>
                <div class="col-sm-10">
                    <input type="text" name="finalInstruction" class="form-control" placeholder="Enter Final Instruction" value="{{myPlan.finalInstruction}}">
                </div>
            </div>

            <div class="row">
                <div class="col-3"></div>
                <div class="col-2">
                    <button class="btn btn-block btn-sm bg-secondary text-white">Preview</button>
                </div>
                <div class="col-2"></div>
                <div class="col-2">
                    <button class="btn btn-block btn-sm bg-info text-white" type="submit">Update</button>
                </div>
                <div class="col-3"></div>
            </div>
        </form>
    </div>
</div>